<h1>{{listTitle}}</h1>

<form action="/user" method="POST">
    <input type="hidden" name="_id" value="{{user._id}}">
    <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="Enter your first name" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="Enter your last name" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <label>Super Hero Name</label>
        <input type="text" class="form-control" name="superHeroName" placeholder="Enter your super hero name" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Enter your email" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <label>Gender</label>
        <input type="text" class="form-control" name="gender" placeholder="Gender Please" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" name="age" placeholder="Enter your age" value="{{user.fullName}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Submit</button>
    </div>
</form>