<div style="display:flex;align-items:center;width:70%;padding-left:0" >
<div style="margin-right: 10px;">    
<h3><a class="btn btn-secondary" href="/user">+ Add Record</a></h3>
</div>
<form method="GET">
<input class="form-control" type="text" placeholder="Search" aria-label="Search" style="width: 100%; margin-bottom:8px;">
</form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Super Hero Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list }}
        <tr>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.superHeroName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.age}}</td>
            <td><div style="margin-right: 10px;">    
<h3><a class="btn btn-secondary" href="/user/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');">Delete</a></h3>
</div></td>
        </tr>
        {{/each}}
    </tbody>
</table>